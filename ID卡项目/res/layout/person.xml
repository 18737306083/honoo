<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_login_topbar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#000084" >
 <ImageView 
          android:id="@+id/back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/flight_title_back_normal"
          android:layout_centerVertical="true"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_login_topbar"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >
             <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="50dp" >

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:textSize="17sp"
                    android:text="手机号" />

                <EditText
                    android:id="@+id/userPhone"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@+id/number"
                    android:background="@null"
                     
                    android:maxEms="12"
                    android:editable="false"
                    
                    android:paddingLeft="16dp"
                      android:textSize="15sp"
                      android:alpha="0.7"
                    android:singleLine="true"
                    android:textColor="#45443D" >

                    <requestFocus />
                </EditText>

              
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/userPhone"
                   android:alpha="0.5"
                    android:layout_marginTop="6dp"
                    android:background="#ffcccccc" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" >

                <TextView
                    android:id="@+id/tv_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:textSize="17sp"
                    android:text="用户名" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@+id/tv_uid"
                    android:background="@null"
                    
                    android:maxEms="12"
                    android:hint="用户名"
                    android:paddingLeft="16dp"
                      android:textSize="15sp"
                      android:alpha="0.8"
                    android:singleLine="true"
                    android:textColor="#45443D" >

                    <requestFocus />
                </EditText>

              
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/username"
                   android:alpha="0.5"
                    android:layout_marginTop="6dp"
                    android:background="#ffcccccc" />
            </RelativeLayout>
            <RelativeLayout
               android:layout_width="match_parent"
                android:layout_height="50dp" >
            <RadioGroup 
                 
                android:id="@+id/sex"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_alignParentRight="true"
            >
            <RadioButton 
                android:checked="true" 
                android:id="@+id/male"
                       android:text="男"/>
             <RadioButton 
                 android:id="@+id/female"
                android:text="女"/>
            
            
        </RadioGroup>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" >

                <TextView
                    android:id="@+id/passtext1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                     android:textSize="17sp"
                    android:text="密   码" />

                <EditText
                    android:id="@+id/userPassWord1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                     android:textSize="15sp"
                     android:alpha="0.8"
                    android:layout_toRightOf="@+id/passtext1"
                    android:background="@null"
                    android:hint="输入密码"
                   
                    android:inputType="textPassword"
                    android:paddingLeft="22dp"
                    android:textColor="#45443D" />
                    
            
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/userPassWord1"
                     android:alpha="0.3"
                    android:layout_marginTop="6dp"
                    android:background="#ffcccccc"
                    android:paddingBottom="10dp" />
            </RelativeLayout>
           
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" >

                <TextView
                    android:id="@+id/passwordtext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                     android:textSize="17sp"
                    android:text="确认密码" />

                <EditText
                    android:id="@+id/userPassWord2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                     android:textSize="15sp"
                     android:alpha="0.8"
                    android:layout_toRightOf="@+id/passwordtext2"
                    android:background="@null"
                    android:hint="再次输入密码"
                   
                    android:inputType="textPassword"
                    android:paddingLeft="6dp"
                    android:textColor="#45443D" />
                    
            
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/userPassWord2"
                     android:alpha="0.3"
                    android:layout_marginTop="6dp"
                    android:background="#ffcccccc"
                    android:paddingBottom="10dp" />
            </RelativeLayout>
            
             
        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
              android:background="@drawable/btn_ok"
            android:text="提交"
            android:textColor="#F2F2F2" />
    </LinearLayout>

</RelativeLayout>