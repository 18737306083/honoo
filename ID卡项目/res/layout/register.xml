<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_login_topbar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#000084" >
 <ImageView 
          android:id="@+id/back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/flight_title_back_normal"
          android:layout_centerVertical="true"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_login_topbar"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="50dp" >

                <TextView
                    android:id="@+id/tv_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                      android:textSize="17sp"
                    android:text="账号" />

                <EditText
                    android:id="@+id/Phone"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@+id/tv_uid"
                    android:background="@null"
                    android:inputType="number"
                    android:maxEms="12"
                    android:hint="请输入手机号"
                    android:paddingLeft="16dp"
                      android:textSize="15sp"
                      android:alpha="0.8"
                    android:singleLine="true"
                    android:textColor="#45443D" >

                    <requestFocus />
                </EditText>

              
                <View 
                    
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/Phone"
                   android:alpha="0.5"
                    android:layout_marginTop="6dp"
                    android:background="#ffcccccc" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                 android:layout_marginTop="5dp"
                android:layout_height="50dp" >

                <TextView
                    android:id="@+id/in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                     android:textSize="17sp"
                    android:text="验证码" />

                <EditText
                    android:id="@+id/inputCode"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                     android:textSize="15sp"
                     android:alpha="0.7"
                    android:layout_toRightOf="@+id/in"
                    android:background="@null"
                    android:hint="请输入验证码"
                   
                    
                    android:paddingLeft="6dp"
                    android:textColor="#45443D" />
                     <Button
                         android:layout_width="100dp"
                         android:id="@+id/yan"
                         android:layout_height="40dp"
                         android:text="获取验证码"
                         android:layout_alignParentRight="true"
                         android:background="#000084"
                         android:textColor="@android:color/white"
                          />
            
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/inputCode"
                     android:alpha="0.3"
                    android:layout_marginTop="6dp"
                    android:background="#ffcccccc"
                    android:paddingBottom="10dp" />
            </RelativeLayout>
             <TextView
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:alpha="0.7"
                     
                   android:layout_marginTop="10dp"
                     android:textSize="17sp"
                    android:text="" />
            
             
        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
              android:background="@drawable/btn_ok"
            android:text="下一步"
            android:textColor="#F2F2F2" />
    </LinearLayout>

</RelativeLayout>